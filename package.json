{
	"name": "server",
	"version": "1.0.0",
	"description": "Productivity server",
	"main": "server.js",
	"scripts": {
		"codegen": "graphql-codegen --config codegen.yml",
		"dev": "concurrently \"yarn watch\" \"nodemon dist/server.js\" \"yarn codegen --watch\"",
		"prod-dev": "concurrently \"yarn watch\" \"pm2 start dist/server.js\" \"yarn codegen --watch\"",
		"watch": "tsc -w",
		"build": "yarn codegen && tsc",
		"start": "node dist/server.js",
		"postinstall": "prisma generate",
		"ts-node": "ts-node --compiler-options {\\\"module\\\":\\\"commonjs\\\"}"
	},
	"author": "Sarthak Agrawal",
	"license": "MIT",
	"devDependencies": {
		"@graphql-codegen/cli": "1.21.3",
		"@graphql-codegen/introspection": "1.18.1",
		"@graphql-codegen/typescript": "1.21.1",
		"@graphql-codegen/typescript-resolvers": "^1.19.0",
		"@types/node": "^14.14.37",
		"concurrently": "^6.0.1",
		"prettier": "2.2.1",
		"prisma": "^2.21.1",
		"ts-node": "^10.0.0",
		"typescript": "^4.2.3"
	},
	"dependencies": {
		"@prisma/client": "^2.21.1",
		"@types/bcryptjs": "^2.4.2",
		"@types/jsonwebtoken": "^8.5.1",
		"@types/nodemailer": "^6.4.2",
		"@types/type-is": "^1.6.3",
		"apollo-server": "^2.22.2",
		"bcryptjs": "^2.4.3",
		"dotenv": "^8.2.0",
		"graphql": "^15.5.0",
		"jsonwebtoken": "^8.5.1",
		"nodemailer": "^6.6.1"
	}
}